@{
    ViewData["Title"] = "Menú Principal";
    string rol = Context.Session.GetString("Rol") ?? "";
    string nombre = Context.Session.GetString("Nombre") ?? "";
}

<style>
    .menu-container {
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
        padding: 40px 20px;
    }

    .menu-title {
        font-size: 32px;
        font-weight: 600;
        margin-bottom: 10px;
        color: #1a1a1a;
    }

    .menu-subtitle {
        font-size: 18px;
        color: #444;
        margin-bottom: 40px;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 25px;
    }

    .menu-card {
        background: #fff;
        border-radius: 12px;
        padding: 25px 20px;
        box-shadow: 0px 4px 12px rgba(0,0,0,0.08);
        transition: all 0.2s ease;
        border: 1px solid #e6e6e6;
    }

        .menu-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 8px 20px rgba(0,0,0,0.12);
        }

    .menu-btn {
        display: block;
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        font-size: 16px;
        text-decoration: none;
        background: #007bff;
        color: #fff;
        font-weight: 500;
        transition: background 0.2s ease;
    }

        .menu-btn:hover {
            background: #0056b3;
            color: #fff;
        }

    .btn-admin {
        background: #dc3545;
    }

        .btn-admin:hover {
            background: #b92d39;
        }

    .logout-btn {
        margin-top: 40px;
        display: inline-block;
        padding: 10px 16px;
        background: #333;
        color: #fff;
        border-radius: 8px;
        text-decoration: none;
    }

        .logout-btn:hover {
            background: #000;
        }
</style>

<div class="menu-container">
    <div class="menu-title">Bienvenido @nombre</div>
    <div class="menu-subtitle">Selecciona una opción para continuar</div>

    <div class="menu-grid">

        <!-- Registrar Memo -->
        <div class="menu-card">
            <a href="/Home/Create" class="menu-btn">Registrar Memorándum</a>
        </div>

        <!-- Consultas -->
        <div class="menu-card">
            <a href="/Home/Consultas" class="menu-btn">Consultas</a>
        </div>

        <!-- Cancelaciones -->
        <div class="menu-card">
            <a href="/Home/Cancelados" class="menu-btn">Cancelados</a>
        </div>


        <!-- Reporte -->
        <div class="menu-card">
            <a href="/Registro/ExportToExcel" class="menu-btn">Generar Reporte Excel</a>
        </div>

        <!-- SOLO ADMIN -->
        @if (rol == "Admin")
        {
            <div class="menu-card">
                <a href="/Users/Index" class="menu-btn btn-admin">Administrar Usuarios</a>
            </div>
        }

    </div>

    <a href="/Auth/Logout" class="logout-btn">Cerrar Sesión</a>
</div>
